#!/bin/sh

builddir="build-static-check"
rm -rf $builddir
mkdir $builddir

# clang -Weverything

CXX="g++" \
CXXFLAGS="
-Werror
-Wall
-Wextra
-Wpedantic
-Wunused
-Wunused-function
-Wunused-label
-Wunused-parameter
-Wunused-value
-Wunused-variable
-Wvariadic-macros
-Wvla
-Wvolatile-register-var
-Wwrite-strings
-Wtype-limits
-Wundef
-Wuninitialized
-Wunknown-pragmas
-Wno-pragmas
-Wunreachable-code
-Wswitch
-Wswitch-default
-Wswitch-enum
-Wsync-nand
-Wredundant-decls
-Wreturn-type
-Wsequence-point
-Wshadow
-Wsign-compare
-Wsign-conversion
-Wstrict-overflow=5
-Wpacked
-Wpacked-bitfield-compat
-Wparentheses
-Wpointer-arith
-Wno-multichar
-Wnonnull
-Wno-overflow
-Woverlength-strings
-Wmissing-include-dirs
-Wmissing-noreturn
-Wmissing-field-initializers
-Wmissing-format-attribute
-Winvalid-pch
-Wlogical-op
-Wmain
-Wmissing-braces
-Wno-int-to-pointer-cast
-Wno-invalid-offsetof
-Wignored-qualifiers
-Winit-self
-Wno-endif-labels
-Wfatal-errors
-Wfloat-equal
-Wno-div-by-zero
-Wempty-body
-Wenum-compare
-Wno-deprecated
-Wno-deprecated-declarations
-Wdisabled-optimization
-Wcomment
-Wconversion
-Wcoverage-mismatch
-Wcast-align
-Wcast-qual
-Wchar-subscripts
-Wclobbered
-Wc++11-compat
-Waddress
-Warray-bounds
-Wno-attributes
-Wno-builtin-macro-redefined
-Wno-pmf-conversions
-Wsign-promo
-Woverloaded-virtual
-Wctor-dtor-privacy
-Wnon-virtual-dtor
-Wreorder
-Weffc++
-Wstrict-null-sentinel
-Wno-non-template-friend
-Wstrict-aliasing=1
-Wold-style-cast
" meson . $builddir
